<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.*?>
<AnchorPane xmlns="http://javafx.com/javafx"
            xmlns:fx="http://javafx.com/fxml"
            fx:controller="com.example.javashooter.ClientStartFrame"
            prefHeight="400.0" prefWidth="600.0">
    <Label text="Введите имя и начните игру!"
           styleClass="text-label"
           alignment="CENTER"
           AnchorPane.topAnchor="10"
           AnchorPane.leftAnchor="10"
           AnchorPane.rightAnchor="10">

    </Label>
    <Button AnchorPane.rightAnchor="10"
            AnchorPane.bottomAnchor="10"
            prefWidth="150"
            text="Подключиться"
            onMouseClicked="#onConnect"
            >
    </Button>
    <TextField AnchorPane.leftAnchor="10"
               AnchorPane.bottomAnchor="10"
               prefWidth="300"
               fx:id="nameField" >

    </TextField>

</AnchorPane>
